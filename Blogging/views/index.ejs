<div class="author">
    <h1 class="author__heading">Hi, I am Rahul</h1>
    <p class="author__body">I'm a passionate developer.</p>
</div>

<img src="/img/boy.jpg" alt="Mashle" class="hero-image" width="981" height="528" >

<section class="articles">
    <h2 class="articles__heading">Latest Post</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>


    <% if (nextPage!==null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Post</a>
    <% } %>


    


</section>